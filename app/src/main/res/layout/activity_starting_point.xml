<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.zeikman.thenewboston.StartingPoint">

    <TextView android:id="@+id/tvNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_text"
        android:textSize="@dimen/total_textSize"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button android:id="@+id/bAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom"
        android:layout_gravity="center"/>

    <Button android:id="@+id/bSub"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/minus_one"
        android:layout_gravity="center"
        android:textSize="@dimen/minus_button_textSize"/>
</LinearLayout>
